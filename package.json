{
  "name": "npm-navigator",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "description": "navigate npm dependencies visually",
  "keywords": [
    "svelte",
    "vite",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "npm run prepare:vite",
    "prepare:vite": "vite build",
    "start": "vite",
    "test": "npm run test:cafe",
    "test:cafe": "testcafe $BROWSER:headless tests/cafe/*-cafe.mjs --esm -s build/test --page-request-timeout 5000 --app-init-delay 8000 --app vite",
    "lint": "npm run lint:css",
    "lint:css": "stylelint ./src/*.css",
    "preview": "vite preview"
  },
  "dependencies": {
    "WiredPanels": "^2.0.0",
    "browser-stream-tar": "^2.0.0",
    "mf-styling": "^3.1.6",
    "svelte-common": "^6.10.24",
    "svelte-guard-history-router": "^6.1.2",
    "svelte-session-manager": "^2.2.22",
    "vite-plugin-compression2": "^1.1.2"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/github": "^10.1.0",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "npm-pkgbuild": "^15.3.25",
    "semantic-release": "^24.0.0",
    "stylelint": "^16.7.0",
    "stylelint-config-standard": "^36.0.1",
    "svelte": "^5.0.0-next.184",
    "testcafe": "^3.6.2",
    "vite": "^5.3.3"
  },
  "optionalDependencies": {
    "mf-hosting-frontend": "^3.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arlac77/npm-navigator.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/npm-navigator/issues"
  },
  "homepage": "https://github.com/arlac77/npm-navigator#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": "build/"
    },
    "csp.connect-src": "connect-src 'self' https://registry.npmjs.org/;",
    "frontend": true,
    "title": "NPM Navigator"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "any Debian Package"
            },
            {
              "path": "dist/*any.pkg.*",
              "label": "any Arch Linux Package"
            },
            {
              "path": "dist/*x86_64.pkg.*",
              "label": "x86_64 Arch Linux Package"
            },
            {
              "path": "dist/*aarch64.pkg.*",
              "label": "arm64 Arch Linux Package"
            },
            {
              "path": "dist/*noarch.rpm",
              "label": "noarch RPM"
            },
            {
              "path": "dist/*x86_64.rpm",
              "label": "x86_64 RPM"
            },
            {
              "path": "dist/*aarch64.rpm",
              "label": "arm64 RPM"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-npm-pkgbuild",
      "arlac77/template-svelte-app",
      "arlac77/template-testcafe"
    ]
  }
}
