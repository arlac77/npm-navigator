{
  "name": "npm-navigator",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "packageManager": "npm@11.6.0+sha512.77f3fb0dbbd881835d7bd1217deabdf7ed77fc4ec4f363df64fc3cb986404abf6c437661041080f5c5d225103508e7c9ea30cb2742b7e942675d05a10af2d7b9",
  "description": "navigate npm dependencies visually",
  "keywords": [
    "svelte",
    "vite",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "0BSD",
  "scripts": {
    "prepare": "node --run prepare:vite",
    "prepare:vite": "vite build",
    "start": "vite",
    "test": "node --run test:cafe",
    "test:cafe": "testcafe $BROWSER:headless tests/cafe/*-cafe.mjs --esm -s build/test --page-request-timeout 5000 --app-init-delay 8000 --app vite",
    "lint": "node --run lint:css",
    "lint:css": "stylelint ./src**/*.css",
    "preview": "vite preview"
  },
  "dependencies": {
    "WiredPanels": "^2.0.0",
    "browser-stream-tar": "^3.0.4",
    "mf-styling": "^3.2.13",
    "svelte-common": "^6.19.33",
    "svelte-guard-history-router": "^6.1.2",
    "svelte-session-manager": "^3.0.52",
    "vite-plugin-compression2": "^2.2.1"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "npm-pkgbuild": "^18.3.9",
    "semantic-release": "^24.2.9",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "svelte": "^5.39.8",
    "testcafe": "^3.7.2",
    "vite": "^7.1.9"
  },
  "optionalDependencies": {
    "mf-hosting-frontend": "^3.9.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arlac77/npm-navigator.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/npm-navigator/issues"
  },
  "homepage": "https://github.com/arlac77/npm-navigator#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": "build/"
    },
    "csp.connect-src": "connect-src 'self' https://registry.npmjs.org/;",
    "frontend": true,
    "title": "NPM Navigator"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "any Debian Package"
            },
            {
              "path": "dist/*any.pkg.*",
              "label": "any Arch Linux Package"
            },
            {
              "path": "dist/*x86_64.pkg.*",
              "label": "x86_64 Arch Linux Package"
            },
            {
              "path": "dist/*aarch64.pkg.*",
              "label": "arm64 Arch Linux Package"
            },
            {
              "path": "dist/*noarch.rpm",
              "label": "noarch RPM"
            },
            {
              "path": "dist/*x86_64.rpm",
              "label": "x86_64 RPM"
            },
            {
              "path": "dist/*aarch64.rpm",
              "label": "arm64 RPM"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-npm-pkgbuild",
      "arlac77/template-svelte-app",
      "arlac77/template-testcafe"
    ]
  }
}
