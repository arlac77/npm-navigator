{
  "name": "npm-navigator",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/main.js",
  "module": "src/main.js",
  "description": "navigate npm dependencies visually",
  "keywords": [
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "rollup -c",
    "pretest": "rollup -c tests/rollup.config.js",
    "test": "ava --timeout 2m",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme dist/main.js --section=API",
    "lint": "documentation lint dist/main.js"
  },
  "dependencies": {
    "WiredPanels": "^2.0.0",
    "mf-styling": "arlac77/mf-styling"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-json": "^4.0.3",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "ava": "^3.8.2",
    "builtin-modules": "^3.1.0",
    "c8": "^7.1.2",
    "documentation": "^13.0.0",
    "koa": "^2.11.0",
    "koa-static": "^5.0.0",
    "npm-pkgbuild": "^6.11.19",
    "puppeteer": "^3.0.2",
    "rollup": "^2.9.1",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-executable": "^1.6.0",
    "semantic-release": "^17.0.7"
  },
  "engines": {
    "node": ">=14.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/npm-navigator.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/npm-navigator/issues"
  },
  "homepage": "https://github.com/arlac77/npm-navigator#readme",
  "config": {
    "base": "/services/npm-navigator/",
    "api": "/services/npm-navigator/api",
    "proxyTarget": "https://somewhere/"
  },
  "pacman": {
    "groups": "web",
    "content": {
      "${installdir}/": {
        "base": "public"
      },
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    },
    "installdir": "/services/npm-navigator/frontend",
    "hooks": "pacman/hooks.sh",
    "depends": {
      "nginx-mainline": ">=1.17.10"
    }
  },
  "release": {
    "plugins": [
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} pkgbuild pacman makepkg"
        }
      ],
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator"
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-github",
      "arlac77/template-web-app"
    ]
  }
}
