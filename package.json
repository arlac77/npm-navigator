{
  "name": "npm-navigator",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "packageManager": "npm@11.6.4+sha512.1118cab46a05a50aee6bff5b1b4fa1df18afff89d57465620a3518035026955db87c5bdf9d207b07b7487d99f2490d450cb774655ad63ec2cba7bf1d0ad25d45",
  "description": "navigate npm dependencies visually",
  "keywords": [
    "svelte",
    "vite",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "0BSD",
  "scripts": {
    "prepare": "node --run prepare:vite",
    "prepare:vite": "vite build",
    "start": "vite",
    "test": "node --run test:playwright",
    "test:playwright": "npx playwright test",
    "lint": "node --run lint:css",
    "lint:css": "stylelint ./src**/*.css",
    "preview": "vite preview"
  },
  "dependencies": {
    "WiredPanels": "^2.0.0",
    "browser-stream-tar": "^3.0.4",
    "mf-styling": "^3.3.2",
    "svelte-common": "^6.19.55",
    "svelte-guard-history-router": "^7.0.9",
    "svelte-session-manager": "^3.0.75",
    "vite-plugin-compression2": "^2.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "npm-pkgbuild": "^20.2.1",
    "playwright": "^1.58.0",
    "semantic-release": "^25.0.2",
    "stylelint": "^17.0.0",
    "stylelint-config-standard": "^40.0.0",
    "svelte": "^5.48.2",
    "vite": "^7.3.1"
  },
  "optionalDependencies": {
    "mf-hosting-frontend": "^3.9.12"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arlac77/npm-navigator.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/npm-navigator/issues"
  },
  "homepage": "https://github.com/arlac77/npm-navigator#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": "build/"
    },
    "csp.connect-src": "connect-src 'self' https://registry.npmjs.org/;",
    "frontend": true,
    "title": "NPM Navigator"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "any Debian Package"
            },
            {
              "path": "dist/*any.pkg.*",
              "label": "any Arch Linux Package"
            },
            {
              "path": "dist/*x86_64.pkg.*",
              "label": "x86_64 Arch Linux Package"
            },
            {
              "path": "dist/*aarch64.pkg.*",
              "label": "arm64 Arch Linux Package"
            },
            {
              "path": "dist/*noarch.rpm",
              "label": "noarch RPM"
            },
            {
              "path": "dist/*x86_64.rpm",
              "label": "x86_64 RPM"
            },
            {
              "path": "dist/*aarch64.rpm",
              "label": "arm64 RPM"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-npm-pkgbuild",
      "arlac77/template-playwright",
      "arlac77/template-svelte-app"
    ]
  }
}
