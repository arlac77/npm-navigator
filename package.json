{
  "name": "npm-navigator",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "description": "navigate npm dependencies visually",
  "keywords": [
    "svelte",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "rollup -c",
    "start": "rollup -c -w"
  },
  "dependencies": {
    "WiredPanels": "^2.0.0",
    "mf-styling": "arlac77/mf-styling",
    "svelte-common": "^2.1.6",
    "svelte-guard-history-router": "^2.24.0",
    "svelte-session-manager": "^1.1.7"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-inject": "^4.0.2",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-virtual": "^2.0.3",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "npm-pkgbuild": "^6.12.5",
    "postcss-import": "^12.0.1",
    "rollup": "^2.24.0",
    "rollup-plugin-consts": "^1.0.2",
    "rollup-plugin-dev": "^1.1.2",
    "rollup-plugin-postcss": "^3.1.5",
    "rollup-plugin-svelte": "git+https://github.com/ctavan/rollup-plugin-svelte.git#handle-missing-exports-gracefully",
    "rollup-plugin-terser": "^7.0.0",
    "semantic-release": "^17.1.1",
    "svelte": "^3.24.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/npm-navigator.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/npm-navigator/issues"
  },
  "homepage": "https://github.com/arlac77/npm-navigator#readme",
  "config": {
    "api": "/services/npm-navigator/api",
    "base": "/services/npm-navigator",
    "proxyTarget": "https://somewhere/"
  },
  "pacman": {
    "groups": "web",
    "content": {
      "${installdir}/": {
        "base": "public"
      },
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    },
    "installdir": "/services/npm-navigator/frontend",
    "hooks": "pacman/hooks.sh",
    "depends": {
      "nginx-mainline": ">=1.19.0"
    }
  },
  "release": {
    "plugins": [
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} pkgbuild pacman makepkg"
        }
      ],
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator"
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-svelte-app"
    ]
  }
}
