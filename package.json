{
  "name": "npm-navigator",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "description": "navigate npm dependencies visually",
  "keywords": [
    "svelte",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "rollup -c rollup.config.mjs",
    "start": "rollup -c -w rollup.config.mjs",
    "test": "npm run test:cafe",
    "test:cafe": "testcafe $BROWSER:headless tests/cafe/*.js -s build/test --page-request-timeout 9000 --app-init-delay 3000 --app \"rollup -c rollup.config.mjs -w\""
  },
  "dependencies": {
    "WiredPanels": "^2.0.0",
    "mf-styling": "arlac77/mf-styling",
    "svelte-common": "^4.4.41",
    "svelte-guard-history-router": "^4.6.14",
    "svelte-session-manager": "^2.0.10"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-virtual": "^2.0.3",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "npm-pkgbuild": "^10.0.1",
    "postcss": "^8.4.6",
    "postcss-import": "^14.0.2",
    "rollup": "^2.67.0",
    "rollup-plugin-consts": "^1.0.2",
    "rollup-plugin-dev": "^2.0.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "semantic-release": "^19.0.2",
    "svelte": "^3.46.3",
    "testcafe": "^1.18.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/npm-navigator.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/npm-navigator/issues"
  },
  "homepage": "https://github.com/arlac77/npm-navigator#readme",
  "config": {
    "api": "/services/npm-navigator/api",
    "base": "/services/npm-navigator",
    "proxyTarget": "https://somewhere/",
    "title": "NPM Navigator"
  },
  "pkgbuild": {
    "groups": "web",
    "content": {
      "${install.dir}": {
        "base": "public"
      },
      "${nginx.sites.dir}${name}.conf": "pkg/nginx.conf"
    },
    "install.dir": "${install.base.dir}${name}/frontend/",
    "hooks": "pkg/hooks.sh",
    "depends": {
      "nginx-mainline": ">=1.21.4"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --verbose"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-svelte-app#next",
      "arlac77/template-testcafe"
    ]
  }
}
